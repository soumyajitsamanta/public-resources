text
@<project name="rex" default="all" basedir=".">
    <!-- 
        ===================================================================
            Source tree
        =================================================================== 
    -->
    <property name="src.dir" value="${basedir}/src"/>

    <property name="lib.dir" value="${basedir}/lib"/>
    
    <property name="icons.dir" value="${basedir}/src/rex/images"/>
    <!-- 
        ===================================================================
            Build area 
        =================================================================== 
    -->
    <property name="build.dir" value="${basedir}/build"/>
    <property name="build.classes" value="${build.dir}/classes"/>

    <!-- 
        ===================================================================
            Distribution area 
        =================================================================== 
    -->
    <property name="dist.dir" value="${basedir}/dist"/>

    <!-- 
        ===================================================================
            Class paths
        =================================================================== 
    -->
    
    <path id="classpath">
        
        <pathelement location="${lib.dir}/jcommon-0.9.0.jar"/>        
        <pathelement location="${lib.dir}/jfreechart-0.9.15.jar"/>        
    </path>

    <property name="classpath" refid="classpath"/>

    <!-- 
        ===================================================================
            Prepare for Build
        =================================================================== 
    -->

    <target name="prepare">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.classes}"/>
    </target>

    <!-- 
        ===================================================================
            Build
        =================================================================== 
    -->

    <target name="compile" depends="prepare">
        <javac  srcdir="${src.dir}"
            destdir="${build.classes}"
            includes="**/*.java"
            debug="true"
            optimize="true">
            <classpath path="${classpath}"/>
        </javac>
    </target>
   <copy todir="${build.classes}/rex/images">
      <fileset dir="${icons.dir}">            
      </fileset>
   </copy>

    <!-- 
        ===================================================================
            Distribution
        =================================================================== 
    -->
    <target name="jar" depends="compile">
        <jar destfile="${dist.dir}/rex.jar" basedir="${build.classes}" >           
           <manifest>
              <attribute name="Main-Class" value="rex.WarehouseExplorer" />
              <attribute name="Class-Path" value="jfreechart-0.9.15.jar jcommon-0.9.0.jar"/>
          </manifest>
         </jar>
          
         <copy todir="${dist.dir}">
          <fileset dir="${lib.dir}">            
          </fileset>
        </copy>
    </target>



    <!-- 
        ===================================================================    
            Clean
        =================================================================== 
    -->

    <target name="clean" description="clean up build artifacts">
        <delete dir="${build.dir}"/>
    </target>


    <target name="all" depends="jar"/>

</project>
@


