public class WarehouseExplorer extends JPanel {
   public WarehouseExplorer() {
      // ImageIcon icon = new ImageIcon("images/middle.gif");
      JTabbedPane tabbedPane = new RexTabbedPane();

      JLabel helpLabel = new JLabel("<html><h2>wa<b>R</b>ehouse <b>EX</b>plorer v0.5</h2>"
                                  + "<br><br>This is a working version."
                                  + "<br>"
                                  + "<br><br>Usage:"
                                  + "<br>1. Right click <i>Data sources</i> and select <i>Add</i>."
                                  + "<br>2. Type in an XMLA URL, e.g. :"
                                  + "<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Mondrian 2.0:&nbsp;&nbsp;&nbsp;<i>http://localhost:8080/mondrian/xmla</i>"
                                  + "<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Analysis Services 2000:&nbsp;&nbsp;&nbsp;<i>https://localhost/xmla/msxisapi.dll</i>"
                                  + "<br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Analysis Services 2005:&nbsp;&nbsp;&nbsp;<i>http://localhost/olap/msmdpump.dll</i>"
                                  + "<br><br>You should be able to figure it out from there, it's all pretty simple (mostly right-click based)."
                                  + "<br>All comments (good & bad) are welcomed!"
                                  + "<br><a href=\"mailto:igor.mekterovic@@fer.hr\">igor.mekterovic@@fer.hr</a>"
                                  + "</html>");

      JPanel helpPanel = new JPanel();
      helpPanel.setLayout(new BoxLayout(helpPanel, BoxLayout.Y_AXIS));
      helpPanel.add(new JLabel(S.getAppIcon("rex.gif")));
      helpPanel.add(Box.createRigidArea(new Dimension(50,50)));
      helpPanel.add(helpLabel);
      helpPanel.setOpaque(false);
//      helpPanel.setBorder(BorderFactory.createRaisedBevelBorder());

      JPanel treeAndHelp = new JPanel(){
         {setOpaque(false);}
         public void paintComponent(Graphics g) {
            S.paintBackground(g, this);
            super.paintComponent(g);
         }

      };
      treeAndHelp.setLayout(new BoxLayout(treeAndHelp, BoxLayout.X_AXIS));
      treeAndHelp.add(new DataSourceTree(tabbedPane));
//      treeAndHelp.add(Box.createRigidArea(new Dimension(20,0)));
      treeAndHelp.add(helpPanel);
//      treeAndHelp.setBackground(Color.WHITE);


      tabbedPane.addTab( "Data sources"
                        , null
                        , treeAndHelp
                        , "Choose your data source!");
      tabbedPane.setSelectedIndex(0);
      ((RexTabbedPane)tabbedPane).setIconAnimationOff();

      //Add the tabbed pane to this panel.
      setLayout(new GridLayout(1, 1));
      add(tabbedPane);
   }





   public static void main(String[] args) {
        JFrame frame = new JFrame("Rex");
        frame.addWindowListener(new WindowAdapter() {
            public void windowClosing(WindowEvent e) {System.exit(0);}
        });

        frame.getContentPane().add(new WarehouseExplorer()
                                   ,   BorderLayout.CENTER);
        frame.setExtendedState(frame.MAXIMIZED_BOTH);
        frame.setVisible(true);

        // this doesn't work right!?
//        EventQueue waitQueue = new WaitCursorEventQueue(2500);
//        Toolkit.getDefaultToolkit().getSystemEventQueue().push(waitQueue);
    }


}
