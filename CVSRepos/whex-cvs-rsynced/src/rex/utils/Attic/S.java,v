   public static ImageIcon getAppIcon(String filename) {
      ImageIcon icon = null;
      URL url = ClassLoader.getSystemResource("rex/images/" + filename);
    //  return null;
//      out(url.toString());

      if (url != null) {
         icon = new ImageIcon(url);
      }
      return icon;

   }

}
