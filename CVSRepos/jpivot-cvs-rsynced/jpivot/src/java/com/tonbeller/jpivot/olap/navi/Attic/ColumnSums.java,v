package com.tonbeller.jpivot.olap.navi;

import com.tonbeller.jpivot.core.Extension;

/**
 * adds/removes a new row which contains the sums of the columns respectively
 * @@author Hans Baier
 */
public interface ColumnSums extends Extension {
  /**
   * name of the Extension for lookup
   */
  public static final String ID = "columnSums";

  /**
   * @@return true if the last member on rows is not a column sum
   */
  public boolean isColumnSums();

  /**
   * change the visability the column sums row
   */
  public void setColumnSums(boolean columnSums);
}
@

