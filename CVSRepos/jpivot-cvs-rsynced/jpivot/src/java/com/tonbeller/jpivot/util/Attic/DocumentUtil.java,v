@a0 24
package com.tonbeller.jpivot.util;

import java.util.Iterator;
import java.util.List;

import org.w3c.dom.Element;

public class DocumentUtil {

	public static void removeRowsOrColumns(Element elem, List hiddenList) {

		RowMemberRemover rowRemover = new RowMemberRemover();
		ColumnMemberRemover colRemover = new ColumnMemberRemover();
		for (Iterator iterator = hiddenList.iterator(); iterator.hasNext();) {
			String label = (String) iterator.next();
			rowRemover.remove(elem, label);
		}
		for (Iterator iterator = hiddenList.iterator(); iterator.hasNext();) {
			String label = (String) iterator.next();
			colRemover.remove(elem, label);
		}
	}

}
@

