@<?xml version="1.0" encoding="UTF-8"?>
<project name="es.aeat.eett.infoRubik plugin build file" default="help" basedir=".">
	<property name="plugin.id" value="es.aeat.eett.infoRubik"/>
	<property name="plugin.version" value="0.0.1"/>
	<property name="plugin.home" value="${plugins.home}/${plugin.id}-${plugin.version}"/>

	<path id="classpath">
		<fileset dir="${plugins.home}/../lib">
			<include name="**/*.jar"/>
		</fileset>
		<!-- Para jdom	-->
		<fileset dir="${plugins.home}/es.aeat.eett.rubik.core-1.1.5/lib">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${plugins.home}/es.aeat.eett.workbench.core-0.0.1/lib">
			<include name="**/*.jar"/>
		</fileset>
		<!-- Para jFreeChart-->
		<fileset dir="${plugins.home}/es.aeat.eett.rubik.chart-0.9.0/lib">
			<include name="**/*.jar"/>
		</fileset>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.workbench.core-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.workbench.log-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.core-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.menu-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.export-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.tableRubik-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.chart-*/classes"/>
		<dirset dir="${plugins.home}" includes="es.aeat.eett.rubik.map-*/classes"/>
	</path>

	<target name="help">
		<echo><![CDATA[
${plugin.id} plug-in build file:
dist-bin - creates binary distribution package
]]></echo>
	</target>

	<target name="dist-bin">
		<copy todir="${plugin.home}">
			<fileset dir="${basedir}" includes="**/*" excludes="**/.*,build.xml,classes/,source/"/>
		</copy>
		<mkdir dir="${plugin.home}/classes"/>
		<javac
			destdir="${plugin.home}/classes"
			srcdir="${basedir}/source"
			classpathref="classpath"
			excludes=""
			debug="false"
			optimize="true">
		</javac>
		<copy todir="${plugin.home}/classes">
			<fileset dir="${basedir}/source" includes="**/*" excludes="**/.*,**/*.java"/>
		</copy>
		<javadoc
			destdir="${plugin.home}/docs/api"
			classpathref="classpath"
			sourcepath="${basedir}/source"
			packagenames="${plugin.id}.*">
		</javadoc>
	</target>
</project>
@


