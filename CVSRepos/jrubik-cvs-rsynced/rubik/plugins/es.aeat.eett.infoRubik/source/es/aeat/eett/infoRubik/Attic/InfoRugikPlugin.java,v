@/*
 * Created on 14-sep-2005
 *
 * InfoRugikPlugin.java
 */
package es.aeat.eett.infoRubik;


import java.awt.BorderLayout;
import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

import javax.swing.JComponent;

import es.aeat.eett.infoRubik.reports.ReportsListener;
import es.aeat.eett.workbench.core.CorePlugin;
import es.aeat.eett.workbench.core.PluginBench;
import es.aeat.eett.workbench.core.PluginException;
import es.aeat.eett.workbench.core.ViewMain;

/**
 * @@author f00992
 */
public class InfoRugikPlugin extends PluginBench implements ViewMain {
	private static final List listeners =new ArrayList();
	
	public void addReportsListener(ReportsListener listener ){
		listeners.add(listener);
	}
	public void removeReportsListener(ReportsListener listener){
		listeners.remove(listener);
	}
	public void fireShowRight (int id){
		Iterator it=listeners.iterator();
		while(it.hasNext()){
			ReportsListener lis=(ReportsListener)it.next();
			lis.showRight(id);
		}
	}
	public void fireHideRight(){
		Iterator it=listeners.iterator();
		while(it.hasNext()){
			ReportsListener lis=(ReportsListener)it.next();
			lis.hideRight();
		}
	}

	/**
     * This plug-in ID.
     */
    public static final String PLUGIN_ID = "es.aeat.eett.infoRubik";
	/**
	 *  The uniqueId of the extension ViewMain
	 */
	public static final String EXT_UNIQUE_ID=PLUGIN_ID+"@@infoRubik";
	
	/**
	 * @@see org.java.plugin.Plugin#doStart()
	 */
	protected void doStart() throws Exception {
		CorePlugin corePlugin=(CorePlugin)getManager()
			.getPlugin(CorePlugin.PLUGIN_ID);
		corePlugin.registerPluginListener(this);
	}
	/**
	 * @@see org.java.plugin.Plugin#doStop()
	 */
	protected void doStop() throws Exception {
		CorePlugin corePlugin=(CorePlugin)getManager()
			.getPlugin(CorePlugin.PLUGIN_ID);
		corePlugin.unregisterPluginListener(this);
	}
	/**
	 * @@see es.aeat.eett.workbench.core.ViewMain#initViewMain(javax.swing.JComponent)
	 */
	public void initViewMain(JComponent rootContainer) throws PluginException {
		rootContainer.setLayout(new BorderLayout());
		try {
			rootContainer.add(new JSplitPaneManager().createJSplitPane(), BorderLayout.CENTER);
		} catch (Exception e) {
			e.printStackTrace();
			//scrollReports=null;
			throw new PluginException(e,"JScroll create Fail.");
		}finally{
			//log.info("");
		}
	}
}
