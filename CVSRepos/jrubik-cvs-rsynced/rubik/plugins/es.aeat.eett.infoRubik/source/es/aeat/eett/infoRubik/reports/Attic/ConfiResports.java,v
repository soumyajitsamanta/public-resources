package es.aeat.eett.infoRubik.reports;

import java.io.File;

import org.java.plugin.PluginManager;

import es.aeat.eett.rubik.core.RubikPlugin;


/**
 * @@author f00992
 */
class ConfiResports {
	private static final String REPORTS_SPACE="reportsspace";
    private static File fileReportsSpace=null;

    private static ConfiResports instance=null;
    private ConfiResports() throws Exception {
        initReportsSpace();
    }
    public static ConfiResports getInstance() throws Exception{
        if(instance==null)
            instance=new ConfiResports();
        return instance;
    }
	private void initReportsSpace() throws Exception {
	    PluginManager pm = PluginManager.lookup(ConfiResports.class);
	    RubikPlugin rubikPlugin = ((RubikPlugin) pm.getPlugin(RubikPlugin.PLUGIN_ID));
	    File f= new File(rubikPlugin.getSharedFolder(), REPORTS_SPACE);
	    f.getAbsolutePath();
	    if(!f.exists()){
            if(!f.mkdir()){
            	throw new Exception("Fail create dir:" +f.getAbsolutePath());
            }
	    }
	    fileReportsSpace=f;
	}


    /**
     * @@return Returns the rEPORTS_SPACE.
     */
    public static String getREPORTS_SPACE() {
        return REPORTS_SPACE;
    }
    /**
     * @@return Returns the fileReportsSpace.
     */
    public File getFileReportsSpace() {
        return fileReportsSpace;
    }
}
@


