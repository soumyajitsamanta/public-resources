package es.aeat.eett.infoRubik.reports;

import java.awt.Component;
import java.awt.event.ActionEvent;
import java.util.ResourceBundle;

import javax.swing.AbstractAction;
import javax.swing.JPopupMenu;
import javax.swing.JTree;
import javax.swing.tree.TreePath;

/**
 * @@author f00992
 *
 * TODO To change the template for this generated type comment go to
 * Window - Preferences - Java - Code Style - Code Templates
 */
class ActionRenameNode extends AbstractAction {
    private static final ResourceBundle localizationResources =
        ResourceBundle.getBundle("es.aeat.eett.infoRubik.reports.locale.LocalizationBundle");
	private static final String RENAME_NODE=localizationResources.getString("RenameNode");

	ActionRenameNode(){
	    super(RENAME_NODE);
    }
    public void actionPerformed(ActionEvent e) {
        javax.swing.JPopupMenu jp=(JPopupMenu)( (Component)e.getSource()).getParent();
        JTree tree=(JTree) jp.getInvoker();
        Object  lastPath =tree.getLastSelectedPathComponent();
        if(lastPath instanceof ReportMutableTreeNode){
        	ReportMutableTreeNode rmtn=(ReportMutableTreeNode) lastPath;
        	if(rmtn.isEditable()){
                TreePath selPath = tree.getSelectionModel().getSelectionPath();
        		if (lastPath != null && selPath!=null) {
        	        tree.startEditingAtPath(selPath);
        		}
        	}
        }
    }

}
