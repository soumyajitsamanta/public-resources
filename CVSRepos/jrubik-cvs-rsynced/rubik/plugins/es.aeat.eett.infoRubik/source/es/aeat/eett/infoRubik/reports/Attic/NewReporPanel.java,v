package es.aeat.eett.infoRubik.reports;

import java.awt.GridLayout;
import java.util.ResourceBundle;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;
import javax.swing.event.DocumentEvent;
import javax.swing.event.DocumentListener;

/**
 * JPanel para pedir informacion al usuario sobre el Report a crear.
 *
 * @@author f00992
 */
class NewReporPanel extends JPanel{
    private static final ResourceBundle localizationResources =
        ResourceBundle.getBundle("es.aeat.eett.infoRubik.reports.locale.LocalizationBundle");

    private static final String NAME_DIR=localizationResources.getString("nameDir");
    private static final String NAME_REPORT=localizationResources.getString("nameRepors");

    private String nameDir=new String();
    private String nameReport=new String();
    private JTextField nameDirField;
    private JTextField nameReportField;

    /**
     * Crea una nueva instancia de  la clase
     */
    public NewReporPanel() {
        super( new GridLayout(2,2));
        initComponents();
    }
    private void initComponents(){
        JLabel lmaneDir=new JLabel(NAME_DIR);
        add(lmaneDir);
        TextFieldListener tl=new TextFieldListener();
        nameDirField=new JTextField(nameDir, 10);
        nameDirField.getDocument().addDocumentListener (tl);
        add(nameDirField);

        JLabel lmaneReport=new JLabel(NAME_REPORT);
        add(lmaneReport);

        nameReportField=new JTextField(nameReport, 10);
        nameReportField.getDocument().addDocumentListener (tl);
        add(nameReportField);
    }

    /**
     * @@return Returns the nameDir.
     */
    String getNameDir() {
        return nameDir;
    }
    /**
     * @@param nameDir The nameDir to set.
     */
    void setNameDir(String nameDir) {
        nameDirField.setText(nameDir);
    }
    /**
     * @@return Returns the nameReport.
     */
    String getNameReport() {
        return nameReport;
    }
    /**
     * @@param nameReport The nameReport to set.
     */
    void setNameReport(String nameReport) {
        nameReportField.setText(nameReport);
    }
    class TextFieldListener implements DocumentListener {

        public void insertUpdate(DocumentEvent e) {
            updateFiel(e);
        }
        public void removeUpdate(DocumentEvent e) {
            updateFiel(e);
        }

        public void changedUpdate(DocumentEvent e) {
            updateFiel(e);
        }
        private void updateFiel(DocumentEvent e){
            if(e.getDocument()==nameReportField.getDocument()){
                nameReport=nameReportField.getText();
            }
            if(e.getDocument()==nameDirField.getDocument()){
                nameDir=nameDirField.getText();
            }

        }
    }
}
