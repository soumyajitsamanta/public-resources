@<?xml version='1.0'?>

<!-- 

Znaceni:

1., 2.  - nekolik moznosti zapisu, bud jeste nevim ktere zvolit,
          nebo bude mozno zapisovat oboji
!name   - primarni klic, id, reference
[ xxx ] - nepovinny argument (nebo jeste nemam jasno jak presne to bude)

-->

<project>

<host !name="id" address="dns or ip">

    <!-- databazovy stroj, -->
	<database !name="id" engine="mysql-3.2">

		<!-- jednotlive databaze -->
		<db !name="id" user="" [password=""] [select="SHOW TABLES;"]>

			[ <view name="" query=""> ]

		1.	<table name="Order" [access="RW"]>
				<column !name="" type="" desc="..." />
			</table>
		2.	<table name="" columns="a,b,c">
		</db>

	</database>

    <!-- odkaz na souborovy system bud pres otce nebo pres hosta, 
         zatim nevim. jestli pres otce, bude to o xml uroven vis (ne v <host>) -->
	1.  <file !name="/path/file">
			<!-- typ souboru - jedno z nasledujicich -->
			<csv load="re" save="re">
			[ <html>html options</html> ]
			[ <fixed>4,6,4,10</fixed> ]
			[ <xls /> ]

			<column !name="" type="" desc="..." />
		</file>
</host>

2. <file !dad="auth-key" !name="path" columns="a,b,c" />


<!-- popis otce, ja to (zatim) nepotrebuju, ale asi by to tu melo byt -->
<!-- host na kterem bezi je definovan v auth-key klici -->
[ <dad !key="dad@@localhost:2333">
	<option>DAD_CAN_PERL</option>
	<option>DAD_CAN_SSL</option>
	[ <option>DAD_CAN_BLOWFISH</option> ]
	[ ... ]
</dad> ]


<!-- definice vcely -->
1. <bee !name="" include="script.bee" />
2.:
<bee !name="">
	<desc>...</desc>

	<input>
        <!-- zalezi na poradi, kazdy tag je jeden vstup krome streamu, 
             kde je pocet vstupu roven arite -->
		<constant !name=""> <!-- constant == scalar nebo array -->
		<database !name="">
		<!-- arita je _POVINNY_ argument -->
		<stream   !name="" arity="4">
		[ ... mozna nekdy dalsi typy ]
	</input>

	<output>
		<constant !name="">
		<!-- <database> tady neni! stream.arity je POVINNE-->
		<stream   !name="" arity="4">
		<!-- signals - FUTURE -->
		[ <signal !name="" > ]
		[ ... mozna nekdy dalsi typy ]
	</output>

	1. <code lang="perl" include="file.pl">
	2. <code lang="perl">
#!/usr/bin/perl -w
...
	   </code>	
</bee>


<link>

	<!-- typ spojeni (bee/file/database) uz v tagu abychom mohli na urovni DDL
	     definovat mozne argumenty spojeni -->

	<!-- schema from/to referenci: 
		bee://!name/!input[.num]
		file://!host.name/!path[.num||.!column.name]
		database://host/!database/!db.name/!table.name[.num||.!column.name]
	-->

	<bee from="" to="" compress="off">
		<crypt>blowfish:idea:none</crypt>
	</bee>

	<database from="" to="" load="pipe" save="insert" />
	<file from="" to="" />
</link>


</project>

