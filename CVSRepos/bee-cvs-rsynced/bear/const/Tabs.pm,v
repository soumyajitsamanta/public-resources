@changes for new interface
@
text
@#!/usr/bin/perl
#-----------------------------------------------------
#  Bear Tabs Structure Definition
#-----------------------------------------------------
# $Id: Tabs.pm,v 1.11 2004/04/14 14:39:29 jiri_schmid Exp $

package Tabs;

use utf8;

our $Tabs={
	H=>{name=>'Help',bg=>'8AC',bgg=>'68A',cgi=>'help.cgi',img=>'help',order=>'9'},
	R=>{name=>'Result',bg=>'006666',bgg=>'555555',cgi=>'run.cgi',img=>'table',order=>'6'},
	D=>{name=>'Debug',bg=>'666666',bgg=>'444444',cgi=>'debug.cgi',img=>'debug',order=>'5'},
	P=>{name=>'Preferences',bg=>'dd9900',bgg=>'885500',cgi=>'prefer.cgi',img=>'prefer',order=>'2'},
	A=>{name=>'Admin',bg=>'0099CC',bgg=>'005588',cgi=>'admin.cgi',img=>'admin',order=>'3'},
	E=>{name=>'Edit',bg=>'003c9b',bgg=>'002077',cgi=>'edit.cgi',img=>'edit',order=>'1'},
	L=>{name=>'LDM',bg=>'007040',bgg=>'005030',cgi=>'ldm.cgi',img=>'ldm',order=>'4'},
	M=>{name=>'Derivated',bg=>'005566',bgg=>'003344',cgi=>'derivate.cgi',img=>'derivate',order=>'8'},
	C=>{name=>'Collected',bg=>'006666',bgg=>'002222',cgi=>'collect.cgi',img=>'collect',order=>'7'},
};

our @@Tabs=('E','P','A','L','D','C','M','H'); #have to be set manualy to define order of tabs
our @@TabsCntrl=('A','L','D','E','R','H'); #C a M are forbidden, carefully with 'P', defines tabs viewed by role managed on admin page
our @@TabsCntrlUser=('A','L','D','H'); #C a M are forbidden in this list, defines tabs viewed by user managed on prefer page
our $Derivated = 'M'; #derivated reports tab identifier
our $Collected = 'C'; #collected reports tab identifier

our $TabsDef={
	G=>{name=>'New Grid',id=>'NewGrid',cgi=>'edit.cgi?Action=NewGrid&',img=>'grid',target=>'body'},
	G3=>{name=>'New Graph3d',id=>'NewGraph3d',cgi=>'edit.cgi?Action=NewGraph3d&',img=>'graph3d',target=>'body'},
	Fi=>{name=>'New Filter',id=>'NewFilter',cgi=>'edit.cgi?Action=NewFilter&',img=>'filter',target=>'body'},
	R=>{name=>'New Report',id=>'NewReport',cgi=>'edit.cgi?Action=NewReport&',img=>'report',target=>'body'},
	Fo=>{name=>'New Format',id=>'NewFormat',cgi=>'edit.cgi?Action=NewFormat&',img=>'format',target=>'body'},
	F3=>{name=>'New Format3d',id=>'NewFormat3d',cgi=>'edit.cgi?Action=NewFormat3d&',img=>'format3d',target=>'body'},
	F2=>{name=>'New Format2d',id=>'NewFormat2d',cgi=>'edit.cgi?Action=NewFormat2d&',img=>'format2d',target=>'body'},
	F2M=>{name=>'New Format2d_map',id=>'NewFormat2d_map',cgi=>'edit.cgi?Action=NewFormat2d_map&',img=>'format2d_map',target=>'body'},
	M=>{name=>'New Metric',id=>'NewMetric',cgi=>'edit.cgi?Action=NewMetric&',img=>'metric',target=>'body'},
	P=>{name=>'New Param',id=>'NewParam',cgi=>'edit.cgi?Action=NewParam&',img=>'param',target=>'body'},
	Cop=>{name=>'Tabs Duplicate',id=>'Duplicate',cgi=>'edit.cgi?',img=>'copy',target=>'body'},	
	Del=>{name=>'Tabs Delete',id=>'Remove',cgi=>'edit.cgi?',img=>'delete',target=>'body'},
	UU=>{name=>'New User',id=>'NewUser',cgi=>'admin.cgi?Action=NewUser',img=>'single',target=>'body'},
	UR=>{name=>'New Role',id=>'NewRole',cgi=>'admin.cgi?Action=NewRole',img=>'role',target=>'body'},
	UG=>{name=>'New Group',id=>'NewGroup',cgi=>'admin.cgi?Action=NewGroup',img=>'group',target=>'body'}

};

our @@TabsEdit=('M','Fi','Fo','F2','F2M','F3','G','G3','P','R','|','Cop','Del');

our @@TabsAdmin=('UU','UG','UR','|','Cop','Del');

#__________________________________________________________
#

1;
