1.2
log
@many EN language fixies
@
text
@#!/usr/bin/perl -w
#script for extracting Writelogs from current directory into writelog.nfo file

if ( open NFO, "grep -n 'WriteLog(' * |" ) {
	if (open NFOFILE, ">writelog.nfo") {
		while ( <NFO> ) {
			(my $out = $_) =~ s/\s//g;
			$out =~ /^([^:]*):(\d*).*(WriteLog.*)if.*(LogLevel..).*$/;
			print NFOFILE "message: $3; ($1: $2; $4)\n" if $3;
		}
		close NFOFILE;
	}
	close NFO;
}
@


