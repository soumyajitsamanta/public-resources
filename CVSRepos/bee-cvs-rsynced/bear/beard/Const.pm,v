text
@#-----------------------------------------------------
#  beard Configuration File
#-----------------------------------------------------
# $Id: Const.pm,v 1.13 2004/04/14 09:06:45 jiri_schmid Exp $

package Const;

use utf8;

our $Port=3000; # SOAP port
our $compress_threshold=10000;	# compression threshold for SOAP connection
our $version = '0.03';
our $copyright = '(C) Insight Strategy, a. s., 2002';
#our $USER=$ENV{LOGNAME};
#our $HOSTNAME=$ENV{HOSTNAME};
#our $PWD=$ENV{PWD};
our $PWD="/var/www/html/bear/beard/";
our $MDataDir=$PWD.'/mdata/';
our $MDataExt='.xml';
our $CacheDB = {	# connection parameters for local Cache DB
	'db' => 'cache',
	'port' => '3306',
	'user' => 'root',
	'passwd' => '',
	'enc' => 'iso-8859-2',
	'lookup_varchar' => 0,	# if 1 then VARCHAR(255) format will be used for all char columns in the lookup cache tables, otherwise original DW formats will be used
	'table_type' => 'MYISAM'	# type of the lookup cache DB tables (usually MYISAM)
};
our $LogLevel=4;
#our $LogFile;#='/var/www/html/bear/beard/bear.log';	#log to STDOUT if undef
our $DescrLPadLimit = 80;	#default LPad size limit for long string (such Description field)
our $MetricsIdent='-METRICS-';	# identifier of multiple metrics placement in Grid Edit
our $MetricsLocalization = {
	'cz' => 'Metriky',
	'en' => 'Metrics',
};
our $DefaultLanguage = 'cz';	# default locale

$TZ='CET';	# fix for case Date::Manip is not able to recognize timezone

our $LEGrm = $PWD."Plugin/le.yp"; # Paths to filter grammar deffinition
our $Plugin = { # Paths to Plugins
	# you can arbitrary edit values of this hash, but don't edit list of hash keys!
	'SQL' => 'Plugin/MySQL_simple.pm',	# SQL Generator
	'LB' => 'Plugin/LB_simple.pm',	# Load Balancer
	'USR' => 'Plugin/USR_demo.pm',	# Users and Groups
	'WGHT' => 'Plugin/Weight_simple.pm',	# Weight Estimator
};

#-----------------------------------------------------

