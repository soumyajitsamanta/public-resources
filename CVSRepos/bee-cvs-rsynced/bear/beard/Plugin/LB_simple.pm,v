@#-----------------------------------------------------
#  Basic Load Balancer Plug-In
#-----------------------------------------------------
# $Id: LB_simple.pm,v 1.1 2003/08/04 05:42:36 michald Exp $

package LB;

use strict;
use utf8;

my $version = '0.1';
my $copyright = '(C) Insight Strategy, a. s., 2003';

#---------------------------------------

sub about {                    
  return "Basic Load Balancer v$version ($copyright)"  
}

#---------------------------------------

sub src2run {	# function to select data source to run query
	my $src=shift;	# keys of input hash are data sources
#use Data::Dumper;
#print Dumper($src);
	my @@s = keys %{$src};
	return $s[int(($#s+1)*rand())];	# this simple plug-in selects source on random base
}

#---------------------------------------

1

