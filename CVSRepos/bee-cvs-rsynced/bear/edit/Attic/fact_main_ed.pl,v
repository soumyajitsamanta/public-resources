use strict;
use CGI qw( :standard );
use CGI::Pretty;

require "const.def";
# require "local_lib.pl";

use vars qw($ID $Obj $descr_w $descr_r $itemWidth $use_lang $all_params $skin $skinPath $imgType);

#-----------------------------------------------------

sub generateContent {
print <<END;
<br />
<table class="neutral">
  <tr><td class="neutral_bold">&nbsp;$lang->{'Name'}</td></tr>
  <tr><td class="neutral_center">
  	<input value="$Obj->{name}" type="text" name="fact_name" id="NAME" disabled='disabled' size="$itemWidth" maxlength="100" readonly>
  </td></tr>
  <tr><td><hr></td></tr>
  <tr><td class="neutral_bold">&nbsp;$lang->{'Description'}</td></tr>
  <tr><td><textarea cols="$descr_w" rows="$descr_r" name="fact_des" id="DESC" disabled='disabled' readonly></textarea></td></tr>
  <tr><td><hr></td></tr>
        <!--
	  <tr><td>
          <input type="submit" name="save" value="Save" width="15" height="210"> 
          <input type="reset" name="reset" value="Reset" width="15" height="10">
	  </td></tr>
  	-->
  <tr><td align="center">
  <table class="buttons">
  <tr>
  	<td class="buttons"><input type="button" name="reload" value="$lang->{'Reload'}"/></td>
  </tr>
  </table>
  </td></tr>
</table>
<script type="text/javascript">
	subst_item_id();
</script>
END
}

