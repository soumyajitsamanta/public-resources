@#-----------------------------------------------------
#  Format Editation
#-----------------------------------------------------
# $Id: Format.pm,v 1.4 2004/04/26 18:08:53 vasekd Exp $

package Format;

use strict;
# require "const/Const.pm"; #allready pluged-in by edit_obj.cgi

#-----------------------------------------------------
# print_form is called from edit.cgi

sub generateContent {
my($variables, $lang, $obj) = (shift, shift, shift);
my $saved = $$variables->{saved} if exists $$variables->{saved};

my $imgType = \$$variables->{imgType};
my $skinPath = \$$variables->{skinPath};

my $split = "255,255,255";
my @@colors = split(/,/,$split);
print <<END;
<br />

<script type="text/javascript" src="js/format_color.js"></script>
<script type="text/javascript" src="js/format.js"></script>

<table class="page_skeleton_ex" style='width:100%;'>
<tr class="page_skeleton">
<td class="page_skeleton_ex" style='padding: 10px;' align='center'>
	<table style="text-align:center">
		<tr><td colspan='5' class='neutral_bold' style="text-align:left;" class='nowrap'>$$lang->{'Format2d Color'}:</td>
				<td><img onclick= 'setColorF()' src='$${skinPath}img/sponger.$$imgType' style="cursor:pointer;"></td></tr>
		<tr><td colspan='6'><hr /></td></tr>
		<tr>	<td id='color' class='cursor' style='background-color:rgb($split); width:50px; border:thin solid #424242;' title='$split' onclick='addColorF(this)' rowspan='2'>
				<img src='$${skinPath}img/color.$$imgType'>
				<input type='hidden' value='' id='takeColor' />
			</td>
			<td>&nbsp</td>
			<td style='text-align:right; color:#f00;'>$$lang->{'Graph3d red'}</td>
			<td><img class='cursor' onclick='minusF("red")' src='$${skinPath}img/downArr.$$imgType' onmousedown="startDecrease('red')" onmouseup='stopTimer()'></td>
			<td><input id='red' size='3' style='text-align:center' type='text' value='$colors[0]' onchange='changeColorF()'/></td>
			<td><img onclick='plusF("red")' class='cursor' style='padding:2px' src='$${skinPath}img/upArr.$$imgType' onmousedown="startIncrease('red')" onmouseup='stopTimer()'></td>
		</tr>
		<tr>
			<td>&nbsp</td>
			<td style='text-align:right; color:#0f0'>$$lang->{'Graph3d green'}</td><td><img class='cursor' onclick='minusF("green")' src='$${skinPath}img/downArr.$$imgType' onmousedown="startDecrease('green')" onmouseup='stopTimer()'></td>
			<td><input id='green' type='text' style='text-align:center' size='3' value='$colors[1]' onchange='changeColorF()'/></td>
			<td><img onclick='plusF("green")' class='cursor' style='padding:2px' src='$${skinPath}img/upArr.$$imgType' onmousedown="startIncrease('green')" onmouseup='stopTimer()'></td>
		</tr><tr>
			<td>&nbsp</td>
			<td>&nbsp</td>
			<td style='text-align:right; color:#00f'>$$lang->{'Graph3d blue'}</td><td><img class='cursor' onclick='minusF("blue")' src='$${skinPath}img/downArr.$$imgType' onmousedown="startDecrease('blue')" onmouseup='stopTimer()'></td>
			<td><input id='blue' type='text' style='text-align:center' size='3' value='$colors[2]' onchange='changeColorF()'/></td>
			<td><img onclick='plusF("blue")' class='cursor' style='padding:2px' src='$${skinPath}img/upArr.$$imgType' onmousedown="startIncrease('blue')" onmouseup='stopTimer()'></td>
		</tr>
	</table>
	<hr size='1' noshade='noshade' />
	<table style="text-align:center;">

END

for my $row (0..6) {
	print "<tr>";
	for my $col (0..9) {
		print "<td title='${$Const::predefinedColors}[$row][$col]' onclick='setSelfColorF(this)' style='background-color:rgb(${$Const::predefinedColors}[$row][$col]); width:12px; height:8px'></td>";
	}
	print "</tr>";
}
print <<END;
	</table>	
</td>

<td class="page_skeleton_ex" style='margin:1px; padding:1px; width:100%; height:100%;' rowspan="2">

<table class="page_skeleton_ex" style='width:100%;'>
<tr class="page_skeleton">
<td class="page_skeleton_ex" style='padding:0px;'>
<!-- left down iframe -->

	<IFRAME class="formatIframe" id="formatIframe" name="formatIframe" 
	src="" width="100%" height="40" scrolling="no" frameborder="0"></IFRAME>

<!-- end of left down iframe -->
</td>
</tr>

