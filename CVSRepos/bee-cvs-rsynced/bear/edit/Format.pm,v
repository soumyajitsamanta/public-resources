sub set_next_param {
	my ($o,$q) = (shift, shift);
	$$o->{type} = $$q->param('type');
	$$o->{form} = $$q->param('form');
	$$o->{header} = ($$q->param('header')) ? $$q->param('header') : 'noneHeader';
	
	$$o->{'cssStyle'} ={
 		"table" =>{
 			"align" =>{
 				"horizontal" => $$q->param("table_align_horizontal"),
 			},
			"lines" =>{
