@function editSql(){
document.getElementById("expr").value = customSql;
document.getElementById("expr").readOnly = false;
}

function defaultSql(){
customSql = document.getElementById("expr").value;
document.getElementById("expr").value = document.getElementById("expr_id").value;
parent.document.getElementById("changed").value = 0;
document.getElementById("expr").readOnly = true;
}

function reloadSql(){
if (document.getElementById('customSql').checked) {
	document.getElementById("expr").value = originalCustomSql;
}}

function saveSql(){
var toSAVE = document.getElementById("expr_id");
var SAVING = document.getElementById("expr");
toSAVE.value = (toSAVE.value == SAVING.value) ? "" : SAVING.value;
return true;
}

function clearSql(){
if (document.getElementById('customSql').checked) {
	customSql = "";
	document.getElementById("expr").value = "";
}
}

function copySql() {
var copy = document.getElementById("expr_id").value;
document.getElementById("expr").value = copy;
customSql = copy;
document.getElementById("customSql").click();
}

function switchSql(itemId) {
document.getElementById(itemId).onclick();
document.getElementById(itemId).checked=true;
}
