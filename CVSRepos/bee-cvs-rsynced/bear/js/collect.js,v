var OC = true;

function viewReport(ID){
	parent['report_view'].location.href="run.cgi?&item_id="+ID+"&"+params;
}

function ocTree(side) {
var EID = document.getElementById('openClose');
var task = (side) ? side : (String(EID.src).match(/left/)) ? 'close' : 'open';
iframe = parent.document.getElementById('report_view');
var shrt = (iframe.offsetLeft > 155) ? 2 : 3;
var wdth = parent.document.getElementById('width').value;
var path = (document.getElementById('skin').value) ? document.getElementById('skin').value : "";
if (task == 'open') {
	EID.src = path+'/img/leftArr.png';
	if (iframe.style) {
		iframe.style.width = (100-wdth) + "%";
		iframe.style.left = wdth + "%";
		parent.document.getElementById('report_list').style.width = wdth + "%";
		document.getElementById('content').style.display = 'block';
		OC = true;
	}
} else if (task == 'close') {
	EID.src = path+'/img/rightArr.png';
	if (iframe.style) {
		iframe.style.left = shrt + "%";
		iframe.style.width = (100-shrt) + "%";
		document.getElementById('content').style.display = 'none';
		parent.document.getElementById('report_list').style.width = shrt + "%";
		OC = false;
	}
}
}

function checkRemove(reportName,id,tabDef){
if (confirm(remove+": "+reportName,id)) {
   top.location.href = "index.cgi?remove="+id+"&TabAct="+tabDef;
   }
else return false;
}

