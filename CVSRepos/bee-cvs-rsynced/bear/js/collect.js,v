 case "_self": {parent['report_view'].location.href="run.cgi?&item_id="+eID+"&"+params;
		return }
 case "_collect":parent['report_view'].location.href="run.cgi?&item_id="+eID+"&"+params;
 break;
 }
 */
parent['report_view'].location.href="run.cgi?&item_id="+eID+"&"+params;
}

function Remove(EID,item){
if (confirm(remove+": "+EID.alt)) {
	self.location.href="derivated.cgi?Action=drop&Item="+item+"&"+params;
}
}
