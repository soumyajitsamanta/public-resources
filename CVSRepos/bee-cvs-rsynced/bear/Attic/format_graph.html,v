     function set_graph(pos) {
 	 parent.document.forms[0].form.value= "graph";
 	 parent.document.forms[0].type.value=document.list.style[pos].value;
       }
              
     // loading MD and displaying format_css.html or format_graph.html
     function load_graph() {  //setting CSS style acording MD
         if (parent.document.forms[0].form.value=="") { // in MD was saved graph style	
	   for(var i=0;i<document.list.style.length;i++) {
		if (document.list.style[i].value == parent.document.forms[0].type.value) {
			document.list.style[i].checked=true;
			set_graph(i);
		}		
	  }	    
	}	
     }	       
       
