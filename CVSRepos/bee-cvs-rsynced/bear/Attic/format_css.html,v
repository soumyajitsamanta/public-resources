function changeCSS(idd) {
    var len = document.styleSheets.length;
    for(var i=0;i<len-1;i++) {    
            if (idd!=i) document.styleSheets[i+1].disabled=true;
            else {
	      document.styleSheets[i+1].disabled=false;       
	    }
       }
     }

     function set_grid() {
       var id = document.list.list_css.selectedIndex;
       if (id!=-1) {
         var a = document.list.list_css.options[id].text;
	 changeCSS(id);
 	 parent.document.forms[0].form.value= "grid";
 	 parent.document.forms[0].type.value=a;

       }

     }
     // loading MD and displaying format_css.html or format_graph.html
     function load_grid() {  //setting CSS style acording MD
       if (parent.document.forms[0].type.value=="") { // in MD was saved grid style
	   for(var i=0;i<document.list.list_css.length;i++) {
		if (document.list.list_css.options[i].text == parent.document.forms[0].form.value) document.list.list_css.selectedIndex=i;
	  }
	  set_grid();  
	}
	else {
	   //in MD was saved graph style
	   parent.document.format.style[0].checked="false";
	   parent.document.format.style[1].checked="true";	   
	   change_style(parent.document);
	}
     }	
