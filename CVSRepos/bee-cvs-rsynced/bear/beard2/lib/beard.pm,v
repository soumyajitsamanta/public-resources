@a3 15
use XML::Simple;

sub read_conf {
	my($self,$opt_f) = @@_;

	foreach($opt_f,"etc/bear.conf","/etc/bear.conf") {
	    next unless($_ and -e $_);
		$conf = XMLin($_, forcearray => [qw/pool/],
						  keyattr	 => [qw/cols/],
					) or die;
		return $conf;
	}
	return $conf or die "configuration file not found\n";
}

@

