@#!/usr/bin/perl -w

use Socket;

socket(SOCK,PF_UNIX,SOCK_STREAM,0) or die $!;
connect(SOCK,sockaddr_un(shift));
shutdown(SOCK,1); # I/we have stopped writing data
while(defined($line=<SOCK>)) {
	print $line;
}
@
